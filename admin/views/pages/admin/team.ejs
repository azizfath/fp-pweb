<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <link rel="icon" type="image/x-icon" href="/assets/icons/favicon.ico">
    <link rel="stylesheet" href="/assets/css/admin.css">
</head>
<body>
    <div class="custom-container col">
        <div class="sidebar">
            <div class="side-header">
                <a href="#">
                    <img class="mb-4 mt-4 image-side-header" src="/assets/images/banner.png" alt="" srcset="">
                </a>
                <hr class="divider">
                <ul class="list-unstyled btn-toggle-nav fw-normal pb-1 mt-4">
                    <button class="btn btn-toggle collapsed" data-bs-toggle="collapse" data-bs-target="#pageSetting-collapse" aria-expanded="true">Page Setting</button>
                    <div class="collapse show" id="pageSetting-collapse">
                        <ul class="btn-toggle-nav list-unstyled fw-normal pb-1 small">
                            <li>
                                <a class="link-dark" href="/admin/homeView">Home View</a>
                            </li>
                            <li>
                                <a class="link-dark" href="/admin/AboutMeView">About US</a>
                            </li>
                        </ul>
                    </div>
                    <li class="mb-1">
                        <button class="btn btn-toggle collapsed" data-bs-toggle="collapse" data-bs-target="#data-collapse" aria-expanded="true">Data</button>
                        <div class="collapse show" id="data-collapse">
                            <ul class="list-unstyled btn-toggle-nav fw-normal pb-1 small">
                                <li>
                                    <a class="link-dark" href="/admin/contact">Contact</a>
                                </li>
                                <li>
                                    <a class="link-dark" href="/admin/product">Product</a>
                                </li>
                                <li>
                                    <a class="link-dark" href="/admin/promotion">Promotion</a>
                                </li>
                                <li>
                                    <a class="link-dark" href="/admin/team">Team</a>
                                </li>
                            </ul>
                        </div>
                    </li>
                    
                    <li><hr class="divider"></li>

                    <li class="mt-4 mb-1 p-1">
                        <form  action="/logout" method="post">
                            <input class="btn btn-danger w-100" type="submit" value="Logout">
                        </form>
                    </li>
                </ul>
            </div>
        </div>

        <div class="main-content col">
            <div class="header">
                <nav class="navbar navbar-dark bg-dark">
                    <div class="container-fluid d-flex flex-row justify-content-between">
                        <div class="navbar-brand">
                            <a class="navbar-brand" href="#">Admin Panel</a>
                        </div>
                        <div>
                            <button class="navbar-toggler" type="button" id="toogleNavbar">
                                <span class="navbar-toggler-icon"></span>
                            </button>
                        </div>
                    </div>
                </nav>
                <!-- team edit data -->

                <div class="editButton m-2">
                    <h2>Team</h2>
                    <button class="btn btn-primary"  data-bs-toggle="modal" data-bs-target="#addModal">Add data</button>
                </div>
                <hr class="divider m-3">
                <div class="container-fluid bg-white m-2">
                    <div style="width:100%;">
                        <table class="table">
                            <caption>List of users</caption>
                            <thead>
                                <tr>
                                    <th scope="col">#</th>
                                    <th scope="col">nim</th>
                                    <th scope="col">name</th>
                                    <th scope="col">task</th>
                                    <th scope="col">photo</th>
                                    <th scope="col">action</th>
                                </tr>
                            </thead>
                            <tbody>
                            <% dataTeam.forEach((element,index)=> { %>
                                <tr>
                                    <th scope="row"><%=index += 1%></th>
                                    <td><%= element.nim %></td>
                                    <td><%= element.name %></td>
                                    <td><%= element.task %></td>
                                    <td><%= element.photo %></td>
                                    <td>
                                    <p></p>
                                    <div class="d-flex">
                                        <button class="btn btn-warning m-1" data-bs-toggle="modal" data-bs-target="#updateTeam<%= element.id_team %>id">Edit</button>
                                        <button class="btn btn-danger m-1" data-bs-toggle="modal" data-bs-target="#deleteTeam<%= element.id_team %>id">Delete</button>
                                    </div>
                                    </td>
                                    <div class="modal fade" id="deleteTeam<%= element.id_team %>id" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="deleteTeamModalLabel" aria-hidden="true">
                                        <div class="modal-dialog modal-dialog-centered">
                                            <div class="modal-content">
                                                <div class="modal-header">
                                                    <h5 class="modal-title" id="deleteModalLabel">Delete Data</h5>
                                                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                                </div>
                                                <div class="modal-body">
                                                    <p>nim :</p>  
                                                    <p><%= element.nim %></p>
                                                    <p class="mt-1">name :</p>  
                                                    <p><%= element.name %></p>
                                                    <p class="mt-1">task :</p>  
                                                    <p><%= element.task %></p>
                                                    <p class="mt-1">photo :</p>  
                                                    <p><%= element.photo %></p>
                                                </div>
                                                <div class="modal-footer">
                                                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                                                    <a href="/admin/delete/team/<%= element.id_team %>" class="btn btn-danger">Delete</a>
                                                </div>
                                            </div>
                                        </div>
                                    </div>

                                    <div class="modal fade" id="updateTeam<%= element.id_team %>id" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="updateTeamModalLabel" aria-hidden="true">
                                        <div class="modal-dialog modal-dialog-centered">
                                            <div class="modal-content">
                                                <div class="modal-header">
                                                    <h5 class="modal-title" id="editModelLabelLabel">Edit Data</h5>
                                                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                                </div>
                                                <div class="modal-body">
                                                    <form action="/admin/update/team/<%= element.id_team %>" method="post">
                                                        <div class="mb-3">
                                                            <label for="name" class="col-form-label">name : </label>
                                                            <input id="name" class="form-control" type="text" name="name" value="<%= element.name %>">
                                                        </div>

                                                        <div class="mb-3">
                                                            <label for="dataTask" class="col-form-label">Task</label>
                                                            <select id="dataTask" class="form-select" name="id_task">
                                                                <% dataTask.forEach((task,index)=> { %>
                                                                    <% if(task.id_task == element.id_task){ %>
                                                                        <option selected value="<%= task.id_task %>"><%= task.name %></option>
                                                                    <% } else{ %>  
                                                                        <option  value="<%= task.id_task %>"><%= task.name %></option>
                                                                    <% } %>
                                                                <% }) %>
                                                            </select>
                                                        </div>
                                                        <div class="mb-3">
                                                            <label for="imgurl" class="col-form-label">Image URL: </label>
                                                            <input id="imgurl" class="form-control" type="text" name="imgurl" value="<%= element.photo %>">
                                                        </div>
                                                        <p>or</p>
                                                        <div class="mb-3">
                                                            <label for="formFile" class="form-label">Upload Image</label>
                                                            <input class="form-control" type="file" id="formFile" name="image">
                                                        </div>
                                                        <div class="modal-footer">
                                                            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                                                            <input type="submit" class="btn btn-primary" value="OK">
                                                        </div>
                                                    </form>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            <% }) %>
                            </tbody>
                        </table>
                    <div>
                </div>


                <!-- task edit data -->
                <div class="editButton m-2">
                    <h2>Task</h2>
                    <button class="btn btn-primary"  data-bs-toggle="modal" data-bs-target="#addTask">Add data</button>
                </div>
                <hr class="divider m-3">
                <div class="container-fluid bg-white m-2">
                    <div style="width:100%;">
                        <table class="table">
                            <caption>List of users</caption>
                            <thead>
                                <tr>
                                    <th scope="col">#</th>
                                    <th scope="col">Name</th>
                                    <th scope="col">Description</th>
                                    <th scope="col">Action</th>
                                </tr>
                            </thead>
                            <tbody>
                            <% dataTask.forEach((element,index)=> { %>
                                <tr>
                                    <th scope="row"><%=index += 1%></th>
                                    <td><%= element.name %></td>
                                    <td><%= element.description %></td>
                                    <td>
                                    <div class="d-flex">
                                        <button class="btn btn-warning m-1" data-bs-toggle="modal" data-bs-target="#updateTask<%= element.id_task %>id">Edit</button>
                                        <button class="btn btn-danger m-1" data-bs-toggle="modal" data-bs-target="#deleteTask<%= element.id_task %>id">Delete</button>
                                    </div>
                                    </td>
                                    <div class="modal fade" id="deleteTask<%= element.id_task %>id" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="deleteTaskModalLabel" aria-hidden="true">
                                        <div class="modal-dialog modal-dialog-centered">
                                            <div class="modal-content">
                                                <div class="modal-header">
                                                    <h5 class="modal-title" id="deleteModalLabel">Delete Data</h5>
                                                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                                </div>
                                                <div class="modal-body">
                                                    <p>task :</p>  
                                                    <p>Are you sure to delete "<%= element.name %>"</p>
                                                    <p class="mt-1">description :</p>  
                                                    <p>Are you sure to delete "<%= element.description %>"</p>
                                                </div>
                                                <div class="modal-footer">
                                                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                                                    <a href="/admin/delete/task/<%= element.id_task %>" class="btn btn-danger">Delete</a>
                                                </div>
                                            </div>
                                        </div>
                                    </div>

                                    <div class="modal fade" id="updateTask<%= element.id_task %>id" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="i[dateModalLabel" aria-hidden="true">
                                        <div class="modal-dialog modal-dialog-centered">
                                            <div class="modal-content">
                                                <div class="modal-header">
                                                    <h5 class="modal-title" id="editModelLabelLabel">Edit Data</h5>
                                                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                                </div>
                                                <div class="modal-body">
                                                    <form action="/admin/update/task/<%= element.id_task %>" method="post">
                                                        <div class="mb-3">
                                                            <label for="name" class="col-form-label">name : </label>
                                                            <input id="name" class="form-control" type="text" name="name" value="<%= element.name %>">
                                                        </div>
                                                        <div class="mb-3">
                                                            <label for="description" class="col-form-label">Description : </label>
                                                            <input id="description" class="form-control" type="text" name="description" value="<%= element.description%>">
                                                        </div>
                                                        <div class="modal-footer">
                                                            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                                                            <input type="submit" class="btn btn-primary" value="OK">
                                                        </div>
                                                    </form>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            <% }) %>
                            </tbody>
                        </table>
                    <div>
                </div>

            </div>
        </div>

            <!-- modal -->
        <div class="modal fade" id="addModal" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="addModalLabel" aria-hidden="true">
            <div class="modal-dialog modal-dialog-centered">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="addModalLabelLabel">Add data</h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>
                    <div class="modal-body">
                        <form enctype="multipart/form-data" action="/admin/add/team/" method="post">
                            <div class="mb-3">
                                <label for="nim" class="col-form-label">nim: </label>
                                <input id="nim" class="form-control" type="text" name="nim" value="">
                            </div>
                            <div class="mb-3">
                                <label for="name" class="col-form-label">name: </label>
                                <input id="name" class="form-control" type="text" name="name" value="">
                            </div>

                            <div class="mb-3">
                                <label for="dataTask" class="col-form-label">Task</label>
                                <select id="dataTask" class="form-select" name="id_task">
                                    <% dataTask.forEach((element,index)=> { %>
                                            <option  value="<%= element.id_task %>"><%= element.name %></option>
                                    <% }) %>
                                </select>
                            </div>

                            <div class="mb-3">
                                <label for="imgurl" class="col-form-label">Image URL: </label>
                                <input id="imgurl" class="form-control" type="text" name="imgurl" value="">
                            </div>
                            <p>or</p>
                            <div class="mb-3">
                                <label for="formFile" class="form-label">Upload Image</label>
                                <input class="form-control" type="file" id="formFile" name="image">
                            </div>
                            
                            <div class="modal-footer">
                                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                                <input type="submit" class="btn btn-primary" value="Submit">
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>

        <div class="modal fade" id="addTask" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="addModalLabel" aria-hidden="true">
            <div class="modal-dialog modal-dialog-centered">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="addModalLabel">Add data</h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>
                    <div class="modal-body">
                        <form action="/admin/add/task/" method="post">
                            <div class="mb-3">
                                <label for="name" class="col-form-label">name: </label>
                                <input id="name" class="form-control" type="text" name="name" value="">
                            </div>
    
                            <div class="mb-3">
                                <label for="description" class="col-form-label">description: </label>
                                <input id="description" class="form-control" type="text" name="description" value="">
                            </div>
                            <div class="modal-footer">
                                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                                <input type="submit" class="btn btn-primary" value="Submit">
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>
    <script src="/assets/js/admin.js"></script>
</body> 

</html>